---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anek+Latin:wght@100..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header -->
    <Header />

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Side Social Links -->
    <div class="side-socials">
      <a href="#" title="GitHub"><i class="fa-brands fa-github"></i></a>
      <a href="#" title="Twitter"><i class="fa-brands fa-x-twitter"></i></a>
      <a href="#" title="YouTube"><i class="fa-brands fa-youtube"></i></a>
      <a href="#" title="Instagram"><i class="fa-brands fa-instagram"></i></a>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --bg-dark: #1c265b;
    --bg-card: #141946;
    --accent: #e50914;
    --accent-secondary: #8b5cf6;
    --text-primary: rgba(255, 255, 255, 0.87);
    --text-secondary: rgba(255, 255, 255, 0.6);
    --border-color: rgba(255, 255, 255, 0.1);
    --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
    --header-height: 80px; /* Updated to match Header.astro */
    --grid-gap: 16px;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    font-family:
      "Anek Latin",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    background-color: var(--bg-dark);
    color: var(--text-primary);
    line-height: 1.5;
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Footer */
  footer {
    border-top: 1px solid var(--border-color);
    padding: 1.5rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-socials {
    display: flex;
    gap: 1rem;
  }

  .footer-socials a,
  .side-socials a {
    color: var(--text-secondary);
    transition: color 0.2s;
  }

  .footer-socials a:hover,
  .side-socials a:hover {
    color: var(--text-primary);
  }

  .footer-copyright {
    color: var(--text-secondary);
    font-size: 0.875rem;
    letter-spacing: 1px;
  }

  /* Side Socials */
  .side-socials {
    position: fixed;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    z-index: 90;
  }

  /* Main Content */
  main {
    min-height: calc(100vh - var(--header-height) - 60px);
    padding-bottom: 4rem;
  }

  /* Common Elements */
  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color);
    color: var(--text-primary);
  }

  .content-card {
    background-color: var(--bg-card);
    border-radius: 12px;
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    height: 100%;
  }

  .content-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--card-shadow);
  }

  .card-thumbnail {
    position: relative;
    overflow: hidden;
  }

  .card-thumbnail img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .content-card:hover .card-thumbnail img {
    transform: scale(1.05);
  }

  .card-body {
    padding: 1.25rem;
  }

  .card-body h3 {
    margin-bottom: 0.75rem;
    font-weight: 600;
    font-size: 1.125rem;
  }

  .card-meta {
    display: flex;
    gap: 1rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .card-meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .view-more {
    margin-top: 2rem;
    display: flex;
    justify-content: start;
  }

  .view-more a {
    font-size: l;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #ff0000;
    font-weight: 500;
    transition: gap 0.2s;
  }

  .view-more a:hover {
    gap: 0.75rem;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    font-size: 0.75rem;
    margin-bottom: 1rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    border-radius: 4px;
    transition:
      transform 0.2s,
      background-color 0.2s;
    cursor: pointer;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .btn-primary {
    background-color: #7ccdef;
    color: white;
  }

  .btn-primary:hover {
    background-color: #7ccdef;
  }

  .btn-secondary {
    background-color: var(--accent);
    color: white;
  }

  .btn-secondary:hover {
    background-color: #c50812;
  }

  .icon-play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 3.5rem;
    opacity: 0.9;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
    transition: all 0.2s;
  }

  .content-card:hover .icon-play {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
    color: var(--accent);
  }

  .avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 0.5rem;
  }

  .project-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
  }

  /* Grid Layouts */
  .grid {
    display: grid;
    gap: var(--grid-gap);
  }

  .grid-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .grid-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  /* Make the grid responsive */
  @media (max-width: 1024px) {
    .grid-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Remove the border under the Recent Videos heading */
  .section-heading h2,
  .section-title,
  h2.recent-videos-title,
  .recent-videos-heading {
    border-bottom: none !important; /* Remove the border */
  }

  @media (max-width: 768px) {
    .grid-3,
    .grid-2 {
      grid-template-columns: 1fr;
    }

    .side-socials {
      display: none;
    }
  }
</style>
