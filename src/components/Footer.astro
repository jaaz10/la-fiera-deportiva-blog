---
// src/components/Footer.astro
---

<footer class="site-footer">
  <div class="footer-border top"></div>
  <div class="container">
    <div class="footer-content">
      <div class="social-links">
        <a
          href="https://x.com/hernanespn?lang=ca"
          target="_blank"
          aria-label="Twitter"
        >
          <i class="fa-brands fa-twitter"></i>
        </a>
        <a
          href="https://open.spotify.com/playlist/0tRWrUiHJHfgSbXQ5Whu9N"
          target="_blank"
          aria-label="Spotify"
        >
          <i class="fa-brands fa-spotify"></i>
        </a>
        <a
          href="https://www.youtube.com/@LAFIERADEPORTIVA"
          target="_blank"
          aria-label="YouTube"
        >
          <i class="fa-brands fa-youtube"></i>
        </a>
        <a
          href="https://www.instagram.com/lafieradeportiva/?hl=en"
          target="_blank"
          aria-label="Instagram"
        >
          <i class="fa-brands fa-instagram"></i>
        </a>
      </div>
      <div class="footer-text">Created by Midway Web Design</div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    height: 60px;
    background-color: #141946; /* Dark background to match image */
    position: relative;
  }

  .footer-border {
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
  }

  .footer-border.top {
    top: 0;
    height: 4px;
    background-color: #e11d48; /* Red border to match your header */
  }

  .container {
    width: 100%;
    height: 100%;
    padding: 0;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    padding: 0 20px;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.25rem;
    transition: color 0.2s;
  }

  .social-links a:hover {
    color: white;
  }

  .footer-text {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    letter-spacing: 1px;
    font-weight: 500;
    text-transform: uppercase;
    /* Added margin to balance */
  }

  @media (max-width: 768px) {
    .social-links {
      gap: 1.25rem;
    }

    .social-links a {
      font-size: 1.125rem;
    }

    .footer-text {
      font-size: 0.75rem;
    }
  }
</style>
