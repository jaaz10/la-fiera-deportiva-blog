  <button class="mobile-menu-toggle" aria-label="Toggle Menu">
    <span></span>
    <span></span>
    <span></span>
  </button>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    padding: 0 1em;
    background: var(--header-bg, #111);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    position: relative;
  }

  .logo-container {
    display: flex;
    align-items: center;
  }

  .site-logo {
    height: 70px;
    width: auto;
  }

  .main-nav {
    margin-left: 2rem;
    flex-grow: 1;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
    align-items: center;
  }

  .main-nav li {
    position: relative;
  }

  .main-nav a {
    color: var(--text-color, white);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
    padding: 1em 0.5em;
    display: block;
  }

  .main-nav a:hover,
  .main-nav a.active {
    color: var(--accent, #e73631);
  }

  /* Dropdown styles */
  .dropdown {
    position: relative;
  }

  .dropdown-arrow {
    font-size: 10px;
    margin-left: 4px;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--header-bg, #111);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    padding: 0.5rem 0;
    min-width: 150px;
    z-index: 100;
    display: none !important;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .dropdown:hover .dropdown-menu {
    display: block !important;
  }

  .dropdown-menu li {
    display: block;
    margin: 0;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.5rem 1rem;
    white-space: nowrap;
  }

  /* Tickets Button Styles */
  .tickets-button {
    margin-left: 0.5rem;
  }

  .fire-tickets a {
    background-color: var(--accent, #e73631);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: bold;
  }

  .stars-tickets a {
    background-color: #1a3a7e; /* Red Stars blue color */
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: bold;
  }

  .fire-tickets a:hover {
    background-color: #c72f2a;
  }

  .stars-tickets a:hover {
    background-color: #122a5c;
  }

  /* Make sure buttons align properly on smaller screens */
  @media (max-width: 1024px) {
    .tickets-button {
      margin-left: 0;
      margin-top: 0.5rem;
    }
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
    margin-left: auto;
  }

  .social-icon {
    fill: var(--text-color, white);
    transition: fill 0.3s;
  }

  .social-icon:hover {
    fill: var(--accent, #e73631);
  }

  /* Mobile Menu */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: var(--text-color, white);
    margin: 5px 0;
    transition: 0.3s;
  }

  @media (max-width: 1024px) {
    .main-nav,
    .social-links {
      display: none;
    }

    .mobile-menu-toggle {
      display: block;
      margin-left: auto;
    }

    /* Add mobile menu open styles */
    header.menu-open .main-nav,
    header.menu-open .social-links {
      display: block;
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      background-color: var(--header-bg, #111);
      padding: 1rem;
      z-index: 50;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    header.menu-open .main-nav ul {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }

    header.menu-open .dropdown-menu {
      position: static;
      margin-top: 0.5rem;
      margin-left: 1rem;
      border: none;
      box-shadow: none;
      width: 100%;
    }

    header.menu-open .social-links {
      top: auto;
      padding-top: 1rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      justify-content: center;
    }

    .site-logo {
      height: 50px; /* Smaller on mobile */
    }
  }

  @media (max-width: 720px) {
    .site-logo {
      height: 35px; /* Even smaller on very small screens */
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Mobile menu toggle
    const menuToggle = document.querySelector(".mobile-menu-toggle");
    const header = document.querySelector("header");

    if (menuToggle && header) {
      menuToggle.addEventListener("click", () => {
        header.classList.toggle("menu-open");
      });
    }

    // Dropdown handling for mobile
    const dropdownToggles = document.querySelectorAll(".dropdown-toggle");

    dropdownToggles.forEach((toggle) => {
      toggle.addEventListener("click", (e) => {
        // Only handle dropdown clicks on mobile
        if (window.innerWidth <= 1024) {
          e.preventDefault();

          // Get the parent dropdown container
          const parent = toggle.closest(".dropdown");

          if (!parent) {
            console.error("No parent dropdown found");
            return;
          }

          // Close any other open dropdowns first
          document
            .querySelectorAll(".dropdown.open")
            .forEach((openDropdown) => {
              if (openDropdown !== parent) {
                openDropdown.classList.remove("open");
                const openMenu = openDropdown.querySelector(".dropdown-menu");
                if (openMenu && openMenu instanceof HTMLElement) {
                  openMenu.style.display = "none";
                }
              }
            });

          // Toggle this dropdown
          const isOpen = parent.classList.contains("open");
          parent.classList.toggle("open");

          // Find and toggle the menu visibility
          const menu = parent.querySelector(".dropdown-menu");

          if (menu && menu instanceof HTMLElement) {
            // If we're opening and it was closed, or closing and it was open
            menu.style.display = !isOpen ? "block" : "none";
          } else {
            console.error("Dropdown menu not found", parent);
          }
        }
      });
    });
  });
</script>
