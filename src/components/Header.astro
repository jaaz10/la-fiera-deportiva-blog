---
// src/components/Header.astro
---

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo">
        <div class="logo-icon">
          <img src="/logo-no-bg.png" alt="La Fiera Deportiva Logo" />
        </div>
        <span>La Fiera Deportiva</span>
      </a>

      <nav class="main-nav">
        <a href="/projects">About</a>
        <a href="/blog">Podcast</a>
        <a href="/course"
          >Chicago Fire <i class="fa-solid fa-arrow-up-right-from-square"
          ></i></a
        >
        <a href="https://www.youtube.com/@LAFIERADEPORTIVA" target="_blank"
          >Chicago Stars <i class="fa-solid fa-arrow-up-right-from-square"
          ></i></a
        >
      </nav>
    </div>
  </div>
  <div class="header-border"></div>
</header>

<style>
  .site-header {
    height: 80px;
    background-color: var(--bg-card);
    position: relative;
  }

  .container {
    max-width: 1380px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 100%;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .logo-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .main-nav {
    display: flex;
    gap: 2rem;
  }

  .main-nav a {
    color: white;
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .main-nav a:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  .header-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: #ff0000; /* Red border */
  }

  @media (max-width: 768px) {
    .main-nav {
      gap: 1.25rem;
    }

    .logo {
      font-size: 1.25rem;
    }

    .main-nav a {
      font-size: 1rem;
    }
  }
</style>
