  ],
};

// Define metadata for the page
const pageTitle = articleData.title + " | La Fiera Deportiva";
const pageDescription = articleData.excerpt;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="article-header">
    <div class="category-tag">{articleData.category}</div>
    <h1 class="article-title">{articleData.title}</h1>
    <p class="article-excerpt">{articleData.excerpt}</p>
    <p class="article-date">{articleData.date}</p>
  </div>

  <section class="featured-article">
    <div class="container">
      <div class="article-featured-image">
        <img
          src={articleData.image}
          alt="Carlo Ancelotti, entrenador del Real Madrid"
        />
      </div>

      <div class="article-content">
        {articleData.content.map((paragraph) => <p>{paragraph}</p>)}
      </div>

      <div class="article-sidebar">
        <div class="sidebar-section">
          <h3 class="sidebar-title">Categorías</h3>
          <div class="category-selector">
            <select>
              <option>Seleccionar Categoría</option>
              <option>La Liga</option>
              <option>Champions League</option>
              <option>Premier League</option>
              <option>Serie A</option>
              <option>Bundesliga</option>
              <option>España</option>
              <option>México</option>
            </select>
          </div>
        </div>

        <div class="sidebar-section">
          <h3 class="sidebar-title">Buscar</h3>
          <div class="search-form">
            <input type="text" placeholder="Buscar" />
            <button class="search-button">Buscar</button>
          </div>
        </div>

        <div class="sidebar-section">
          <h3 class="sidebar-title">Liga de Naciones</h3>
          <!-- Here you can add related articles or content -->
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Article Header Styles - Matches the example exactly */
  .article-header {
    background-color: #1c2b5a;
    padding: 1.5rem 0 3rem;
    text-align: center;
    width: 100%;
  }

  .category-tag {
    display: inline-block;
    background-color: #e24b32;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .article-title {
    font-size: 2.8rem;
    line-height: 1.2;
    font-weight: 800;
    color: white;
    margin: 0 auto 1.5rem;
    max-width: 1200px;
    padding: 0 1.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .article-excerpt {
    font-size: 1.4rem;
    color: #e6e6e6;
    font-weight: 400;
    margin: 0 auto 0.5rem;
    max-width: 900px;
    padding: 0 1.5rem;
    line-height: 1.4;
  }

  .article-date {
    color: #a0a0a0;
    font-size: 0.95rem;
    margin: 0.5rem auto 0;
    max-width: 900px;
    padding: 0 1.5rem;
  }

  /* Main Content Styles */
  .featured-article {
    padding: 2rem 0 4rem;
    background-color: var(bg-body);
  }

  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 1fr 350px;
    grid-template-areas:
      "image image"
      "content sidebar";
    gap: 2rem;
  }

  .article-featured-image {
    grid-area: image;
    width: 100%;
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .article-featured-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .article-content {
    grid-area: content;
    font-size: 1.1rem;
    line-height: 1.7;
    color: white;
  }

  .article-content p {
    margin-bottom: 1.5rem;
  }

  .article-sidebar {
    grid-area: sidebar;
  }

  .sidebar-section {
    background-color: #1c2b5a;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .sidebar-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem;
  }

  .category-selector select {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    color: #333;
    background-color: white;
    cursor: pointer;
  }

  .search-form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .search-form input {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    color: #333;
  }

  .search-button {
    background-color: #e24b32;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.8rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .search-button:hover {
    background-color: #c13a26;
  }

  /* Responsive adjustments */
  @media (max-width: 992px) {
    .container {
      grid-template-columns: 1fr;
      grid-template-areas:
        "image"
        "content"
        "sidebar";
    }

    .article-title {
      font-size: 2.2rem;
    }

    .article-excerpt {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 576px) {
    .article-title {
      font-size: 1.8rem;
    }

    .article-excerpt {
      font-size: 1.1rem;
    }

    .article-content {
      font-size: 1rem;
    }

    .sidebar-section {
      padding: 1.2rem;
    }

    .article-header {
      padding: 1rem 0 2rem;
    }

    .category-tag {
      margin-bottom: 1.2rem;
    }
  }
</style>
