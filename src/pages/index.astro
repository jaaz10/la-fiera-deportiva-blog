<style is:global>
  /* Dark theme with red accents - applied globally */
  :root {
    --black: 0, 0, 0;
    --bg-color: #121212;
    --card-bg: #1e1e1e;
    --accent: #e50914; /* Netflix-style red */
    --text-color: #ffffff;
    --text-secondary: #b3b3b3;
    --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    --hover-brightness: 1.1;
  }

  /* Set header styles to dark mode */
  .dark-theme header {
    background-color: #1a1a1a !important;
    color: white !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3) !important;
  }

  .dark-theme header a {
    color: white !important;
  }

  .dark-theme header a.active {
    border-bottom-color: var(--accent) !important;
  }

  .dark-theme header svg {
    fill: white !important;
  }

  /* Global body styles */
  body {
    background-color: var(--bg-color);
    color: var(--text-color);
    margin: 0;
    padding: 0;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
  }

  /* Hero Section - Red gradient */
  .hero {
    background: linear-gradient(135deg, var(--accent), #7a0000);
    color: white;
    padding: 3rem 1.5rem;
    margin-bottom: 2.5rem;
    text-align: center;
    border-radius: 8px;
  }

  .hero h1 {
    font-size: 2.75rem;
    margin-bottom: 1rem;
    font-weight: 800;
  }

  .hero p {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.9;
  }

  /* Content Sections */
  .content-section {
    margin-bottom: 3.5rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.5rem;
  }

  .section-header h2 {
    font-size: 1.8rem;
    color: var(--accent);
    margin: 0;
  }

  .view-all {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .view-all:hover {
    filter: brightness(var(--hover-brightness));
  }

  /* Video Grid */
  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .video-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    background: var(--card-bg);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .video-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
  }

  .video-thumbnail {
    position: relative;
    height: 180px;
    overflow: hidden;
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .video-card:hover .video-thumbnail img {
    transform: scale(1.05);
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(229, 9, 20, 0.8);
    border-radius: 50%;
