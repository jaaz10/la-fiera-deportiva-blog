  <style>
    /* Hero Profile Section */
    .hero-profile {
      padding: 5rem 0 4rem; /* Adjusted from 6rem to match example spacing */
      position: relative;
      background: radial-gradient(
        circle at center,
        rgba(255, 255 255 0.1) 0%,
        rgba(0, 0, 0, 0) 70%
      );
    }

    .profile-wrapper {
      display: flex;
      align-items: center;
      gap: 2.5rem;
    }

    .profile-image {
      flex-shrink: 0;
      transition: transform 0.6s ease-in-out;
      position: relative; /* Add this to create a positioning context */
      width: 140px; /* Set the overall container dimensions */
      height: 140px;
      margin-left: 20px; /* If you want to move the entire component */
      margin-top: -5rem;
    }

    /* This targets the border - create it as a pseudo-element instead of on the img */
    .profile-image::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      border: 6px solid #fcec52; /* Golden border */
      box-sizing: border-box;
      z-index: 1; /* Place above the image */
      pointer-events: none; /* Makes sure hover still works on the image beneath */
      box-shadow:
        inset 0 0 6px rgba(0, 0, 0, 0.3),
        /* Inner shadow */ 0 2px 5px rgba(0, 0, 0, 0.2); /* Outer subtle shadow */
    }

    .profile-image img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      padding-left: 0; /* Remove padding as it's not needed */
      transition: transform 0.6s ease-in-out; /* Move the transition here */
      position: relative;
      z-index: 0; /* Place below the border */
      filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.3));
    }

    .profile-image:hover img {
      transform: rotate(360deg); /* Only rotate the img on hover */
    }

    /* Add this media query to remove the negative margin on smaller screens */
    @media (max-width: 960px) {
      .profile-image {
        margin-top: 0; /* Remove negative margin on smaller screens */
      }

      /* Also adjust other hero section spacing if needed */
      .hero-profile {
        padding: 3rem 0 2rem; /* Reduce overall padding */
      }

      /* You might also want to adjust the profile wrapper */
      .profile-wrapper {
        gap: 1.5rem; /* Reduce gap between image and content */
      }
    }

    /* For very small screens, you might want to make the image smaller too */
    @media (max-width: 640px) {
      .profile-image {
        width: 120px;
        height: 120px;
      }
    }

    .profile-content {
      padding-right: 1.5rem; /* Adjust this value to control how far right the text moves */
    }

    .profile-content h1 {
      font-size: 3rem; /* Increased from 2.5rem to match example */
      margin-bottom: 0.5rem;
      line-height: 1.1; /* Added to improve text spacing */
    }

    .hand-emoji {
      display: inline-block;
      /* Removed animation */
    }

    .name {
      color: #fcec52;
      font-size: 3rem; /* Explicitly set font size to match h1 */
    }

    .welcome-text {
      font-size: 1.5rem; /* Increased from 1.125rem */
      margin-bottom: 0.5rem; /* Increased from 0.75rem */
      padding-left: 60px;
    }

    .welcome-text span {
      color: #ff0000;
    }

    .welcome-text a:hover {
      text-decoration: underline;
    }

    .bio {
      font-size: 1.5rem; /* Added explicit font size */
      line-height: 1.5; /* Added line height */
      margin-bottom: 1rem; /* Increased from 0.75rem */
      max-width: 640px; /* Increased from 600px */
      padding-left: 60px;
    }

    .work-info {
      font-size: 1.125rem; /* Added explicit font size */
      line-height: 1.5; /* Added line height */
      color: var(--text-secondary);
      max-width: 640px; /* Added max width to match bio */
    }

    /* Section Spacing */
    .projects-section,
    .videos-section,
    .newsletter-section {
      padding: 2rem 0;
    }

    /* Update the section title for Recent Videos to match Recent Projects */
    .videos-section .section-title,
    h2.recent-videos-title {
      font-size: 2.5rem; /* Make heading larger to match Recent Projects */
      color: var(--text-primary);
    }

    /* Add more horizontal space between video cards */
    .videos-section .grid-3 {
      gap: 1.5rem; /* Increase gap between cards (default was 16px/var(--grid-gap)) */
    }

    /* Make the video cards wider by adjusting container width */
    .videos-section .container {
      max-width: 1300px; /* Increase from default 1200px */
      width: 95%; /* Use percentage width for better responsiveness */
      margin: 0 auto;
    }

    /* Add more space around each video card */
    .videos-section .content-card {
      margin-bottom: 0.5rem; /* Add slight bottom margin */
      border: 3px solid #7ccdef; /* Add subtle border like in the project cards */
    }

    /* Add more padding in the card body */
    .videos-section .card-body {
      padding: 1.5rem; /* Increase from default 1.25rem */
    }

    /* Make card titles slightly larger */
    .videos-section .card-body h3 {
      font-size: 1.25rem; /* Increase from default 1.125rem */
      margin-bottom: 1rem; /* Add more space below the title */
    }

    /* Ensure the video thumbnail maintains proper ratio */
    .videos-section .card-thumbnail img {
      aspect-ratio: 16 / 9;
    }

    /* Ensure consistent spacing for the section */
    .videos-section {
      padding: 5rem 0; /* Increase overall section padding */
    }

    /* Further responsive adjustments */
    @media (max-width: 1200px) {
      .videos-section .container {
        max-width: 95%; /* Use percentage width on smaller screens */
      }
    }

    @media (max-width: 768px) {
      .videos-section .section-title,
      h2.recent-videos-title {
        font-size: 2.2rem; /* Slightly smaller on mobile but still prominent */
      }

      .videos-section {
        padding: 3rem 0; /* Less padding on mobile */
      }
    }

    /* Project Cards */
    .avatar-small {
      width: 24px;
      height: 24px;
      border-radius: 50%;
    }

    .card-tag {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: var(--bg-card);
      border-radius: 50%;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .project-meta {
      margin-top: 1rem;
      display: flex;
      gap: 1rem;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.35rem;
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    .content-card {
      border-radius: 8px;
      overflow: hidden;
      background-color: var(--bg-card, #1a1b26);
      /* Thicker yellow border - increased from 2px to 4px */
      border: 3px solid #7ccdef; /* Bright yellow border with increased thickness */
      /* Add some subtle glow effect */
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease;
    }

    .content-card:hover {
      transform: translateY(-5px);
    }

    /* Podcast Banner */
    .podcast-banner {
      background-color: var(--bg-card);
      padding: 4rem 0;
      overflow: hidden;
      background-image: url("./spotify-img.jpg");
      /* Change these background properties */
      background-size: cover; /* Covers the entire element */
      background-position: 75% center; /* Centers the image */
      background-repeat: no-repeat; /* Prevents repeating */
      position: relative;
    }

    .podcast-banner::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(
        0,
        0,
        0,
        0.4
      ); /* Adjust opacity here (0.4 = 60% transparent) */
      z-index: 1;
    }

    .podcast-banner-content {
      position: relative;
      z-index: 2;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      flex-direction: column;
      align-items: flex-start; /* Align to the left side of the container */
      margin-left: auto; /* This pushes content to the right */
      margin-right: 5%; /* Space from the right edge */
      width: 65%; /* Adjust width as needed */
    }

    /* Banner borders */
    .banner-border {
      position: absolute;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(
        to right,
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 0.1) 50%,
        rgba(255, 255, 255, 0) 100%
      );
      z-index: 10;
    }

    .banner-border.top {
      top: 0;
    }

    .banner-border.bottom {
      bottom: 0;
    }

    .banner-wrapper {
      display: flex;
      align-items: center;
      gap: 3rem;
      position: relative;
      z-index: 10;
    }

    .banner-logo {
      flex-shrink: 0;
      position: relative;
      width: 140px;
      height: 140px;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
      transition: transform 0.3s ease;
    }

    .banner-logo:hover {
      transform: scale(1.05);
    }

    .banner-logo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .banner-content {
      flex: 1;
    }

    .banner-badge {
      display: inline-block;
      background-color: rgba(255, 255, 255, 0.1);
      color: #fff;
      font-size: 0.875rem;
      padding: 0.25rem 1rem;
      border-radius: 50px;
      margin-bottom: 1rem;
    }

    .banner-content h2 {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 1rem;
      color: white;
    }

    .banner-content p {
      margin-bottom: 1.5rem;
      max-width: 600px;
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.125rem;
      line-height: 1.6;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .btn-secondary {
      background-color: #ff0000; /* Red color for the podcast */
      color: white;
    }

    .btn-secondary:hover {
      background-color: #ff0000;
      transform: scale(1.05);
    }

    /* Responsive adjustments */
    @media (max-width: 960px) {
      .banner-wrapper {
        flex-direction: column;
        text-align: center;
      }

      .banner-content p {
        margin-left: auto;
        margin-right: auto;
      }

      .banner-content h2 {
        font-size: 2rem;
      }
    }

    @media (max-width: 640px) {
      .course-banner {
        padding: 3rem 0;
      }

      .banner-logo {
        width: 120px;
        height: 120px;
      }
    }

    /* Twitter card specific styles */
    .tweet-thumbnail {
      position: relative;
      background-color: #15202b; /* Twitter dark mode background */
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 200px; /* Maintain same height as video thumbnails */
    }

    .tweet-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        135deg,
        #1da1f2,
        #14171a
      ); /* Twitter blue gradient */
      opacity: 0.2; /* Subtle gradient */
    }

    .twitter-icon i {
      color: #1da1f2; /* Twitter blue */
    }

    /* Style for tweet text */
    .tweet-text {
      font-size: 0.9rem;
      line-height: 1.4;
      margin: 8px 0 12px;
      color: #8b98a5;
    }

    /* Hashtags and mentions */
    .hashtag,
    .mention {
      color: #1da1f2;
      font-weight: 500;
    }

    /* Adjust card meta for tweets */
    .content-card .card-meta {
      display: flex;
      gap: 15px;
    }

    /* Hover effect */
    .content-card:hover .twitter-icon i {
      transform: scale(1.1);
    }

    /* If your cards don't already have transition */
    .content-card,
    .icon-play i {
      transition: all 0.3s ease;
    }
    /* Newsletter Section */
    .newsletter-section {
      padding: 4rem 0;
      overflow: hidden;
      background-image: url("./newsletter.jpg");
      /* Change these background properties */
      background-size: cover; /* Covers the entire element */
      background-position: 75% center; /* Centers the image */
      background-repeat: no-repeat; /* Prevents repeating */
      position: relative;
    }

    .newsletter-wrapper {
      display: flex;
      align-items: center;
      gap: 3rem;
    }

    .newsletter-content {
      flex: 1;
    }

    .newsletter-image {
      flex: 1;
      display: none;
    }

    .newsletter-image img {
      border-radius: 12px;
      width: 100%;
    }

    .newsletter-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 50px;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .newsletter-content h2 {
      font-size: 2.25rem;
      margin-bottom: 1rem;
      font-weight: 800; /* Added explicit font weight */
    }

    .newsletter-content p {
      margin-bottom: 0.5rem;
      max-width: 540px;
      color: #fff;
      font-size: 1.125rem; /* Added font size */
    }

    .unsubscribe-note {
      font-size: 0.875rem;
      margin-bottom: 1.5rem;
    }

    /* Section titles */
    .section-title {
      font-size: 1.75rem;
      font-weight: 800; /* Changed from 700 to 800 to match example */
      margin-bottom: 2rem;
      padding-bottom: 0.5rem;
