      <script>
        document.addEventListener("DOMContentLoaded", () => {
          // Video carousel functionality
          const carousel = document.querySelector(
            ".video-items-wrapper"
          ) as HTMLElement;
          const prevButton = document.querySelector(
            ".carousel-button.prev"
          ) as HTMLButtonElement;
          const nextButton = document.querySelector(
            ".carousel-button.next"
          ) as HTMLButtonElement;
          const videoItems = document.querySelectorAll(".video-item");
          const mainVideoFrame = document.getElementById(
            "mainVideoFrame"
          ) as HTMLIFrameElement;
          const mainVideoTitle = document.getElementById(
            "mainVideoTitle"
          ) as HTMLHeadingElement;

          if (
            !carousel ||
            !prevButton ||
            !nextButton ||
            videoItems.length === 0 ||
            !mainVideoFrame ||
            !mainVideoTitle
          )
            return;

          let currentIndex = 0;
          const getItemsPerView = () => {
            return window.innerWidth > 1024
              ? 5
              : window.innerWidth > 768
                ? 3
                : window.innerWidth > 576
                  ? 2
                  : 1;
          };

          let itemsPerView = getItemsPerView();

          // Initialize visibility
          updateVisibility();

          // Carousel navigation
          prevButton.addEventListener("click", () => {
            if (currentIndex > 0) {
              currentIndex--;
              scrollToCurrentIndex();
            }
          });

          nextButton.addEventListener("click", () => {
            if (currentIndex < videoItems.length - itemsPerView) {
              currentIndex++;
              scrollToCurrentIndex();
            }
          });

          // Add click event for video items to play in main player
          videoItems.forEach((item) => {
            item.addEventListener("click", () => {
              const videoId = item.getAttribute("data-video-id");
              const videoTitle = item.getAttribute("data-video-title");

              if (videoId && videoTitle) {
                // Update iframe src with autoplay parameter
                mainVideoFrame.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;

                // Update video title
                mainVideoTitle.textContent = videoTitle;

                // Scroll to main video (optional)
                document
                  .querySelector(".main-video-container")
                  ?.scrollIntoView({
                    behavior: "smooth",
                    block: "start",
                  });
              }
            });
          });

          function scrollToCurrentIndex() {
            const itemWidth = (videoItems[0] as HTMLElement).offsetWidth + 20; // width + gap
            carousel.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
            updateVisibility();
          }

          function updateVisibility() {
            // Update button states
            prevButton.disabled = currentIndex === 0;
            nextButton.disabled =
              currentIndex >= videoItems.length - itemsPerView;

            // Optional: Update button appearance
            prevButton.style.opacity = prevButton.disabled ? "0.5" : "1";
            nextButton.style.opacity = nextButton.disabled ? "0.5" : "1";
          }

          // Handle window resize
          window.addEventListener("resize", () => {
            // Recalculate items per view
            const newItemsPerView = getItemsPerView();

            if (newItemsPerView !== itemsPerView) {
              itemsPerView = newItemsPerView;

              // Reset position if needed
              if (currentIndex > videoItems.length - itemsPerView) {
                currentIndex = Math.max(0, videoItems.length - itemsPerView);
                scrollToCurrentIndex();
              } else {
                updateVisibility();
              }
            }
          });

          // Standings tabs functionality
          const tabButtons = document.querySelectorAll(".tab-btn");
          const tabContents = document.querySelectorAll(".tab-content");

          tabButtons.forEach((button) => {
            button.addEventListener("click", () => {
              // Remove active class from all buttons and contents
              tabButtons.forEach((btn) => btn.classList.remove("active"));
              tabContents.forEach((content) =>
                content.classList.remove("active")
              );

              // Add active class to clicked button and corresponding content
              button.classList.add("active");
              const tabId = button.getAttribute("data-tab");
              const tabContent = document.getElementById(`${tabId}-content`);
              if (tabContent) tabContent.classList.add("active");
            });
          });

          // Conference switching (MLS only)
          const conferenceButtons =
            document.querySelectorAll(".conference-btn");
          const conferenceContents = document.querySelectorAll(
            ".conference-content"
          );

          conferenceButtons.forEach((button) => {
            button.addEventListener("click", () => {
              // Remove active class from all buttons and contents
              conferenceButtons.forEach((btn) =>
                btn.classList.remove("active")
              );
              conferenceContents.forEach((content) =>
                content.classList.remove("active")
              );

              // Add active class to clicked button and corresponding content
              button.classList.add("active");
              const conferenceId = button.getAttribute("data-conference");
              const conferenceContent = document.getElementById(
                `${conferenceId}-content`
              );
              if (conferenceContent) conferenceContent.classList.add("active");
            });
          });
        });
      </script>
