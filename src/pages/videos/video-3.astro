---
// featured-video.astro
import Layout from "../../layouts/Layout.astro";

// Video data structure
const videoData = {
  category: "Podcast",
  title:
    "Lomo Brooklyn enamel pin master cleanse four dollar toast praxis hexagon.",
  excerpt: "Shabby chic master cleanse schlitz",
  date: "Marzo 27, 2025",
  videoUrl: "https://www.youtube.com/embed/ZalRGZf4sME?si=rkgcupSgFl9q_XIt", // Replace with your actual video URL
  thumbnail: "/video-thumbnail.jpg",
  description:
    "Ugh la croix actually church-key microdosing af retro knausgaard raw denim literally adaptogen pitchfork plaid palo santo. Neutra messenger bag shaman bespoke yes plz tattooed authentic.",
};

// Define metadata for the page
const pageTitle = videoData.title + " | La Fiera Deportiva";
const pageDescription = videoData.excerpt;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="article-header">
    <div class="category-tag">{videoData.category}</div>
    <h1 class="article-title">{videoData.title}</h1>
    <p class="article-excerpt">{videoData.excerpt}</p>
    <p class="article-date">{videoData.date}</p>
  </div>

  <section class="featured-video">
    <div class="container">
      <div class="video-player-container">
        <div class="video-player">
          <iframe
            width="100%"
            height="100%"
            src={videoData.videoUrl}
            title={videoData.title}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          >
          </iframe>
        </div>
      </div>

      <div class="video-content">
        <div class="video-description">
          <h2>Descripción</h2>
          <p>{videoData.description}</p>
        </div>

        <div class="comments-section">
          <h2>Comentarios</h2>

          <div class="comment-form">
            <textarea placeholder="Deja tu comentario..."></textarea>
            <button class="comment-button">Publicar comentario</button>
          </div>

          <div class="comments-list">
            <div class="comment">
              <div class="comment-header">
                <div class="comment-author">Carlos Martínez</div>
                <div class="comment-date">Marzo 27, 2025</div>
              </div>
              <div class="comment-body">
                <p>
                  Gran análisis. Creo que Ancelotti tiene un gran desafío por
                  delante con la nueva temporada.
                </p>
              </div>
            </div>

            <div class="comment">
              <div class="comment-header">
                <div class="comment-author">María García</div>
                <div class="comment-date">Marzo 26, 2025</div>
              </div>
              <div class="comment-body">
                <p>
                  Interesante perspectiva. ¿Alguien más piensa que el Madrid
                  necesita reforzar su mediocampo?
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="article-sidebar">
        <div class="sidebar-section">
          <h3 class="sidebar-title">Categorías</h3>
          <div class="category-selector">
            <select>
              <option>Seleccionar Categoría</option>
              <option>La Liga</option>
              <option>Champions League</option>
              <option>Premier League</option>
              <option>Serie A</option>
              <option>Bundesliga</option>
              <option>España</option>
              <option>México</option>
            </select>
          </div>
        </div>

        <div class="sidebar-section">
          <h3 class="sidebar-title">Buscar</h3>
          <div class="search-form">
            <input type="text" placeholder="Buscar" />
            <button class="search-button">Buscar</button>
          </div>
        </div>

        <div class="sidebar-section">
          <h3 class="sidebar-title">Videos Relacionados</h3>
          <div class="related-videos">
            <div class="related-video">
              <img src="/guti.png" alt="Video relacionado" />
              <div class="related-video-title">
                Los mejores goles de la jornada
              </div>
            </div>
            <div class="related-video">
              <img src="/guti.png" alt="Video relacionado" />
              <div class="related-video-title">
                Entrevista exclusiva con Xavi
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Article Header Styles - Matches the example exactly */
  .article-header {
    background-color: #1c2b5a;
    padding: 1.5rem 0 3rem;
    text-align: center;
    width: 100%;
  }

  .category-tag {
    display: inline-block;
    background-color: #e24b32;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .article-title {
    font-size: 2.8rem;
    line-height: 1.2;
    font-weight: 800;
    color: white;
    margin: 0 auto 1.5rem;
    max-width: 1200px;
    padding: 0 1.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .article-excerpt {
    font-size: 1.4rem;
    color: #e6e6e6;
    font-weight: 400;
    margin: 0 auto 0.5rem;
    max-width: 900px;
    padding: 0 1.5rem;
    line-height: 1.4;
  }

  .article-date {
    color: #a0a0a0;
    font-size: 0.95rem;
    margin: 0.5rem auto 0;
    max-width: 900px;
    padding: 0 1.5rem;
  }

  /* Main Content Styles */
  .featured-video {
    padding: 2rem 0 4rem;
    background-color: var(bg-body);
  }

  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 1fr 350px;
    grid-template-areas:
      "player player"
      "content sidebar";
    gap: 2rem;
  }

  .video-player-container {
    grid-area: player;
    width: 100%;
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
    background-color: #000;
  }

  .video-player {
    position: relative;
    padding-top: 56.25%; /* 16:9 Aspect Ratio */
    width: 100%;
  }

  .video-player iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .video-content {
    grid-area: content;
    color: white;
  }

  .video-description {
    margin-bottom: 3rem;
  }

  .video-description h2,
  .comments-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
  }

  .video-description p {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .comment-form {
    margin-bottom: 2rem;
  }

  .comment-form textarea {
    width: 100%;
    height: 120px;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    margin-bottom: 1rem;
    resize: vertical;
    font-family: inherit;
  }

  .comment-button {
    background-color: #e24b32;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .comment-button:hover {
    background-color: #c13a26;
  }

  .comments-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .comment {
    border-bottom: 1px solid #eee;
    padding-bottom: 1.5rem;
  }

  .comment:last-child {
    border-bottom: none;
  }

  .comment-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .comment-author {
    font-weight: 600;
    color: #1c2b5a;
  }

  .comment-date {
    color: #888;
    font-size: 0.9rem;
  }

  .comment-body p {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0;
  }

  .article-sidebar {
    grid-area: sidebar;
  }

  .sidebar-section {
    background-color: #1c2b5a;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .sidebar-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem;
  }

  .category-selector select {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    color: #333;
    background-color: white;
    cursor: pointer;
  }

  .search-form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .search-form input {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    color: #333;
  }

  .search-button {
    background-color: #e24b32;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.8rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .search-button:hover {
    background-color: #c13a26;
  }

  .related-videos {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .related-video {
    display: flex;
    gap: 0.75rem;
    cursor: pointer;
  }

  .related-video img {
    width: 100px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
  }

  .related-video-title {
    font-size: 0.9rem;
    font-weight: 500;
    line-height: 1.3;
    color: white;
  }

  /* Responsive adjustments */
  @media (max-width: 992px) {
    .container {
      grid-template-columns: 1fr;
      grid-template-areas:
        "player"
        "content"
        "sidebar";
    }

    .article-title {
      font-size: 2.2rem;
    }

    .article-excerpt {
      font-size: 1.2rem;
    }

    .related-video img {
      width: 120px;
      height: 70px;
    }
  }

  @media (max-width: 576px) {
    .article-title {
      font-size: 1.8rem;
    }

    .article-excerpt {
      font-size: 1.1rem;
    }

    .video-description p,
    .comment-body p {
      font-size: 1rem;
    }

    .sidebar-section {
      padding: 1.2rem;
    }

    .article-header {
      padding: 1rem 0 2rem;
    }

    .category-tag {
      margin-bottom: 1.2rem;
    }

    .related-video {
      flex-direction: column;
      gap: 0.5rem;
    }

    .related-video img {
      width: 100%;
      height: 120px;
    }
  }
</style>
